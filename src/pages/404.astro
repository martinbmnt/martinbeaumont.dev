---
import { SITE } from 'src/config';
import BaseLayout from '~layouts/BaseLayout.astro';
---

<BaseLayout title="üò¢ Page introuvable" description={SITE.description}>
  <h1>Page introuvable</h1>
  <p>D√©sol√©, la page <code data-path>{Astro.url.pathname.replace(/\/$/, '')}</code> n'existe pas (ou plus).</p>
  <a class="button button--with-icon" href="/">
    <span>Retour √† l'accueil</span>
    <svg focusable="false" aria-hidden="true" class="icon-arrow-right-thin">
      <use xlink:href="/images/icons.svg#icon-arrow-right"></use>
    </svg>
  </a>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const pathContainer = document.querySelector('code[data-path]') as HTMLElement;
    pathContainer.textContent = window.location.pathname;
  });
</script>
