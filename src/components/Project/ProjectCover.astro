---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';


export interface Props {
  cover: ImageMetadata;
  cover_alt: string;
}

const content = Astro.props;
---

<Image
  class='portfolio_item__cover'
  src={content.cover}
  alt={content.cover_alt}
  width={1280}
  height={720}
  format='webp'
  fetchpriority='high'
  loading='eager'
  draggable={false}
  decoding='sync'
/>
