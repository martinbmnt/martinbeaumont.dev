{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~components/*": ["src/components/*"],
      "~layouts/*": ["src/layouts/*"],
      "~styles/*": ["src/styles/*"],
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ]
  },
  "extends": "astro/tsconfigs/base",
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
